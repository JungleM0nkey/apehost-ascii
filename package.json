{
  "name": "ascii-art-studio",
  "version": "2.0.0",
  "description": "Transform text and images into stunning ASCII art - deployed on Cloudflare Workers",
  "main": "src/worker.js",
  "private": true,
  "scripts": {
    "dev": "python3 -m http.server 8080 --directory public || python -m http.server 8080 --directory public",
    "dev:node": "npx serve public -p 8080",
    "start": "npm run dev",
    "deploy": "wrangler deploy --env production",
    "preview": "wrangler dev --local",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "build": "echo 'No build step required for static assets'",
    "clean": "rm -rf dist/ node_modules/.cache/ coverage/",
    "logs": "wrangler tail --env production",
    "audit": "npm audit --production",
    "audit:fix": "npm audit fix",
    "precommit": "npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "ascii-art",
    "text-art",
    "cloudflare-workers",
    "static-site",
    "javascript",
    "art-generator"
  ],
  "author": "ASCII Art Studio",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/ascii-art-studio.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ascii-art-studio/issues"
  },
  "homepage": "https://ascii-art-studio.pages.dev",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@vitest/ui": "^4.0.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "prettier": "^3.6.2",
    "serve": "^14.2.1",
    "vitest": "^4.0.7",
    "wrangler": "^4.30.0"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "cloudflare": {
    "account_id": "your-account-id",
    "zone_id": "your-zone-id"
  }
}
